                span.w-full.inline-flex.rounded-md.shadow-sm
                  a(href="https://saasbox.net/signup-google").w-full.inline-flex.justify-center.py-2.px-4.border.border-gray-300.rounded-md.bg-white.text-sm.leading-5.font-medium.text-gray-500.hover_text-gray-400.focus_outline-none.focus_border-blue-300.focus_ring-blue.transition.duration-150.ease-in-out(type='button' aria-label='Sign in with Googles')
